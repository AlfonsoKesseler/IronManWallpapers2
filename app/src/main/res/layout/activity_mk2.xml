<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mk2_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MK2Activity">

    <LinearLayout
        android:id="@+id/mk2_image_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/mk2_image_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/mk2_1"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/mk2_image_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/mk2_2"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/mk2_image_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/mk2_3"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/mk2_image_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/mk2_4"
            android:visibility="gone" />

    </LinearLayout>

    <Button
        android:id="@+id/mk2_back"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="10"
        android:text="Back"
        android:textAlignment="center"
        android:textSize="36sp"
        android:textStyle="bold" />

</LinearLayout>